@model ComBag.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout"; // We'll create this
}

<div class="container-fluid">
    <h1 class="h2 mb-4">Admin Dashboard</h1>
    
    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <h2>@Model.TotalProducts</h2>
                    <a asp-controller="AdminProducts" asp-action="Index" class="text-white">Manage Products</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h2>@Model.TotalOrders</h2>
                    <a asp-controller="AdminOrders" asp-action="Index" class="text-white">View Orders</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h2>@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Orders</h5>
                    <h2>@Model.PendingOrders</h2>
                    <a asp-controller="AdminOrders" asp-action="Index" asp-route-status="Pending" class="text-white">Review</a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Links -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-controller="AdminProducts" asp-action="Create" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle"></i> Add New Product
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-success w-100">
                                <i class="bi bi-list-check"></i> View All Orders
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="AdminProducts" asp-action="Index" class="btn btn-info w-100">
                                <i class="bi bi-box-seam"></i> Manage Products
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">
                                <i class="bi bi-shop"></i> Visit Store
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Recent Orders -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent Orders</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.RecentOrders)
                            {
                                <tr>
                                    <td>#@order.Id</td>
                                    <td>@(order.User?.Email ?? "N/A")</td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    <td>$@order.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(order.Status)">
                                            @order.Status
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="AdminOrders" asp-action="Details" asp-route-id="@order.Id" 
                                           class="btn btn-sm btn-outline-primary">View</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-link">View All Orders</a>
            }
            else
            {
                <div class="alert alert-info">No orders yet.</div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "bg-warning",
            "processing" => "bg-info",
            "shipped" => "bg-primary",
            "delivered" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}