@model ComBag.Models.Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Product Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-5">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="@(Model.ImageUrl ?? "/images/placeholder.jpg")" 
                         class="img-fluid rounded" 
                         alt="@Model.Name"
                         style="max-height: 400px;">
                </div>
            </div>
        </div>

        <!-- Product Information -->
        <div class="col-md-7">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Product Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID</dt>
                        <dd class="col-sm-9">@Model.Id</dd>
                        
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">
                            @if (Model.Category != null)
                            {
                                <span class="badge bg-primary">@Model.Category.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">No category assigned</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">
                            <h4 class="text-primary">$@Model.Price.ToString("N2")</h4>
                        </dd>
                        
                        <dt class="col-sm-3">Stock</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.StockQuantity > 0 ? "bg-success" : "bg-danger") fs-6">
                                @Model.StockQuantity units
                            </span>
                        </dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <!-- Product Description -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Description</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p>@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-muted">No description provided</p>
                    }
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100">
                                <i class="bi bi-pencil"></i> Edit Product
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" 
                               target="_blank" class="btn btn-outline-info w-100">
                                <i class="bi bi-eye"></i> View on Store
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger w-100">
                                <i class="bi bi-trash"></i> Delete Product
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sales/Order Information (Optional - can add later) -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Product Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="p-3 border rounded">
                                <h3 class="text-primary">0</h3>
                                <p class="mb-0 text-muted">Total Sold</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="p-3 border rounded">
                                <h3 class="text-success">$0.00</h3>
                                <p class="mb-0 text-muted">Revenue</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="p-3 border rounded">
                                <h3 class="text-warning">@Model.StockQuantity</h3>
                                <p class="mb-0 text-muted">Current Stock</p>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="p-3 border rounded">
                                <h3 class="text-info">N/A</h3>
                                <p class="mb-0 text-muted">Avg. Rating</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>