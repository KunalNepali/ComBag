@model ComBag.Models.RepairService
@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="bi bi-eye me-2"></i>@ViewData["Title"]
        </h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Services" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-info-circle me-1"></i>
                    Service Information
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Service Name</dt>
                        <dd class="col-sm-9">
                            <h5>@Model.Name</h5>
                        </dd>
                        
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">
                            <p class="text-muted">@Model.Description</p>
                        </dd>
                        
                        <dt class="col-sm-3">Starting Price</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary fs-6">$@Model.StartingPrice.ToString("0.00")</span>
                        </dd>
                        
                        <dt class="col-sm-3">Estimated Time</dt>
                        <dd class="col-sm-9">
                            @if (Model.EstimatedTimeHours.HasValue)
                            {
                                <span class="badge bg-info">@Model.EstimatedTimeHours.Value hours</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Sort Order</dt>
                        <dd class="col-sm-9">@Model.SortOrder</dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-3">Last Updated</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
            
            <!-- Service Image -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="bi bi-image me-1"></i>
                        Service Image
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px;" />
                        <p class="text-muted mt-2">@Model.ImageUrl</p>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-md-4">
            <!-- Stats Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="bi bi-graph-up me-1"></i>
                    Service Statistics
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-tools display-1 text-primary"></i>
                    </div>
                    
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Total Inquiries</span>
                            <span class="badge bg-primary rounded-pill">
                                <!-- You'll need to get this from your database -->
                                0
                            </span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Pending Inquiries</span>
                            <span class="badge bg-warning rounded-pill">0</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Completed Jobs</span>
                            <span class="badge bg-success rounded-pill">0</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Actions -->
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-lightning me-1"></i>
                    Quick Actions
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Service
                        </a>
                        <a href="@Url.Action("Inquiry", "Repair", new { serviceId = Model.Id })" 
                           target="_blank" class="btn btn-outline-primary">
                            <i class="bi bi-eye"></i> View Public Page
                        </a>
                        <button type="button" class="btn btn-outline-danger" 
                                data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Delete Service
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal (same as in Services.cshtml) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>