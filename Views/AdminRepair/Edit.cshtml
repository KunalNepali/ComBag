@model ComBag.Models.RepairService
@{
    ViewData["Title"] = "Edit Repair Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="bi bi-pencil me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Services" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-tools me-1"></i>
            Edit Service Details
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Service Name *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description *</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartingPrice" class="form-label">Starting Price ($) *</label>
                                <input asp-for="StartingPrice" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="StartingPrice" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="EstimatedTimeHours" class="form-label">Estimated Time (hours)</label>
                                <input asp-for="EstimatedTimeHours" class="form-control" type="number" step="0.5" />
                                <span asp-validation-for="EstimatedTimeHours" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">Additional Settings</div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="SortOrder" class="form-label">Sort Order</label>
                                    <input asp-for="SortOrder" class="form-control" type="number" />
                                    <small class="text-muted">Lower numbers appear first</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                                    <input asp-for="ImageUrl" class="form-control" />
                                    <small class="text-muted">Optional: URL for service image</small>
                                </div>
                                
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label asp-for="IsActive" class="form-check-label">Active Service</label>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Created</label>
                                    <input class="form-control" value="@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")" readonly />
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Last Updated</label>
                                    <input class="form-control" value="@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Services" class="btn btn-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}