@model ComBag.Models.RepairService
@{
    ViewData["Title"] = "Edit Repair Service";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="bi bi-pencil me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Services" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-tools me-1"></i>
            Edit Service Details
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Service Name *</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description *</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceRange" class="form-label">Price Range</label>
                                <input asp-for="PriceRange" class="form-control" placeholder="e.g., $50 - $150 or Contact for quote" />
                                <span asp-validation-for="PriceRange" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Duration" class="form-label">Duration</label>
                                <input asp-for="Duration" class="form-control" placeholder="e.g., 2-3 days, 1 week, 4-6 hours" />
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header">Additional Settings</div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="SortOrder" class="form-label">Sort Order</label>
                                    <input asp-for="SortOrder" class="form-control" type="number" />
                                    <small class="text-muted">Lower numbers appear first</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="Category" class="form-label">Category</label>
                                    <input asp-for="Category" class="form-control" />
                                    <small class="text-muted">e.g., Repair, Restoration, Customization</small>
                                </div>
                                
                                <div class="mb-3">
                                    <label asp-for="IconClass" class="form-label">Icon Class</label>
                                    <input asp-for="IconClass" class="form-control" />
                                    <small class="text-muted">Bootstrap icon class (e.g., bi-tools, bi-bag, bi-scissors)</small>
                                </div>
                                
                                <!-- Current Image -->
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="mb-3">
                                        <label class="form-label">Current Image</label>
                                        <div>
                                            <img src="@Model.ImageUrl" alt="Current image" class="img-thumbnail" style="max-height: 100px;" />
                                            <div class="form-check mt-2">
                                                <input class="form-check-input" type="checkbox" name="removeImage" id="removeImage" value="true">
                                                <label class="form-check-label" for="removeImage">
                                                    Remove current image
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                                
                                <!-- New Image Upload -->
                                <div class="mb-3">
                                    <label class="form-label">New Image (Optional)</label>
                                    <input type="file" class="form-control" name="imageFile" accept="image/*">
                                    <small class="text-muted">Upload JPG, PNG, GIF or WebP (Max 5MB)</small>
                                </div>
                                
                                <div class="form-check form-switch mb-3">
                                    <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                    <label asp-for="IsActive" class="form-check-label">Active Service</label>
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Created</label>
                                    <input class="form-control" value="@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")" readonly />
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label">Last Updated</label>
                                    <input class="form-control" value="@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Services" class="btn btn-secondary me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}