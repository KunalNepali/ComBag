@model IEnumerable<ComBag.Models.RepairService>
@{
    ViewData["Title"] = "Repair Services Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="bi bi-tools me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Service
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="bi bi-list me-1"></i>
            Repair Services List
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
 <table class="table table-striped table-hover" id="servicesTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price Range</th>
            <th>Duration</th>
            <th>Category</th>
            <th>Active</th>
            <th>Sort</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <!-- Column 1: ID -->
                <td>@service.Id</td>
                
                <!-- Column 2: Name -->
                <td>
                    <strong>@service.Name</strong>
                    @if (!string.IsNullOrEmpty(service.Description) && service.Description.Length > 50)
                    {
                        <br />
                        <small class="text-muted">@service.Description.Substring(0, 50)...</small>
                    }
                </td>
                
                <!-- Column 3: Price Range -->
                <td>
                    @if (!string.IsNullOrEmpty(service.PriceRange))
                    {
                        <span class="badge bg-primary">@service.PriceRange</span>
                    }
                    else
                    {
                        <span class="text-muted">Contact for quote</span>
                    }
                </td>
                
                <!-- Column 4: Duration -->
                <td>
                    @if (!string.IsNullOrEmpty(service.Duration))
                    {
                        <span class="badge bg-info">@service.Duration</span>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                
                <!-- Column 5: Category -->
                <td>@service.Category</td>
                
                <!-- Column 6: Active Status -->
                <td>
                    @if (service.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                
                <!-- Column 7: Sort Order -->
                <td>@service.SortOrder</td>
                
                <!-- Column 8: Actions -->
                <td>
                    <div class="btn-group" role="group">
                        <!-- View/Details Button -->
                        <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <!-- Edit Button -->
                        <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <!-- Delete Button -->
                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                data-id="@service.Id" data-name="@service.Name">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center py-4">
                    <i class="bi bi-info-circle display-6 mb-3"></i>
                    <h4>No Repair Services Found</h4>
                    <p class="mb-0">Get started by adding your first repair service.</p>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> Add First Service
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Stats Card -->
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small">Total Services</div>
                            <div class="h4">@Model.Count()</div>
                        </div>
                        <i class="bi bi-tools" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small">Active Services</div>
                            <div class="h4">@Model.Count(s => s.IsActive)</div>
                        </div>
                        <i class="bi bi-check-circle" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small">Pending Inquiries</div>
                            <div class="h4">
                                <!-- You'll need to inject or calculate this -->
                                <a href="@Url.Action("Index", "AdminRepair")" class="text-white text-decoration-none">
                                    View Inquiries
                                </a>
                            </div>
                        </div>
                        <i class="bi bi-envelope" style="font-size: 2.5rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="serviceName"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="serviceId" name="id" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // SIMPLIFIED: Let DataTables auto-detect columns
            $('#servicesTable').DataTable({
                pageLength: 10,
                responsive: true
                // No column ordering specified - let it auto-detect
            });
            
            // Delete modal handling (keep this)
            $('#deleteModal').on('show.bs.modal', function(event) {
                var button = $(event.relatedTarget);
                var serviceId = button.data('id');
                var serviceName = button.data('name');
                
                var modal = $(this);
                modal.find('#serviceName').text(serviceName);
                modal.find('#serviceId').val(serviceId);
                modal.find('#deleteForm').attr('action', '@Url.Action("Delete", "AdminRepair")/' + serviceId);
            });
        });
    </script>
}