@model ComBag.Controllers.UserViewModel
@{
    ViewData["Title"] = "User Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">User Details</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["PasswordReset"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <h5 class="alert-heading">Password Reset</h5>
            <p>@TempData["PasswordReset"]</p>
            <p class="mb-0"><strong>Important:</strong> Share this password with the user securely.</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>
                        
                        <dt class="col-sm-4">Account Created</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsLockedOut)
                            {
                                <span class="badge bg-danger">Locked Out</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Active</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">User Roles</h5>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        <div class="mb-3">
                            @foreach (var role in Model.Roles)
                            {
                                <span class="badge bg-primary me-1 fs-6">@role</span>
                            }
                        </div>
                        <a asp-action="EditRoles" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-shield-lock"></i> Edit Roles
                        </a>
                    }
                    else
                    {
                        <p class="text-muted">No roles assigned</p>
                        <a asp-action="EditRoles" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-shield-plus"></i> Assign Roles
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">User Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <form asp-action="ToggleLockout" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn @(Model.IsLockedOut ? "btn-success" : "btn-warning") w-100">
                                    <i class="bi bi-@(Model.IsLockedOut ? "unlock" : "lock")"></i>
                                    @(Model.IsLockedOut ? "Unlock User" : "Lock User (30 days)")
                                </button>
                            </form>
                        </div>
                        
                        <div class="col-md-4">
                            <form asp-action="ResetPassword" method="post" 
                                  onsubmit="return confirm('Are you sure you want to reset this user\\'s password?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@Model.Id" />
                                <button type="submit" class="btn btn-danger w-100">
                                    <i class="bi bi-key"></i> Reset Password
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>