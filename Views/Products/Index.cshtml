@model List<ComBag.Models.Product>
@{
    ViewData["Title"] = "All Products";
}

<div class="container">
    <h1 class="mb-4">All Products</h1>
    
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-8">
                            <input type="text" name="search" class="form-control" 
                                   placeholder="Search products..." value="@ViewBag.Search">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Search
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            No products found. <a asp-controller="Home" asp-action="Index">Browse our catalog</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <partial name="_ProductCard" model="product" />
                </div>
            }
        </div>
    }
</div>