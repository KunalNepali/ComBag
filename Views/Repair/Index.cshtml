@model List<ComBag.Models.RepairService>
@{
    ViewData["Title"] = "Bag Repair Services";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Bag Repair Services</h1>
        <p class="lead">Professional repair and restoration services for your favorite bags</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No Services Available</h4>
            <p>Check back soon for our repair services.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var service in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100" style="transition: transform 0.3s ease, box-shadow 0.3s ease; border: 1px solid #e0e0e0;">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px; border-bottom: 1px solid #e0e0e0;">
                            <i class="bi bi-tools" style="font-size: 4rem; color: #6c757d;"></i>
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@service.Name</h5>
                            <p class="card-text flex-grow-1">@service.Description</p>
                            
                            <div class="mt-auto">
                                <div class="mb-3">
                                    <span class="h4 text-primary">Contact for Quote</span>
                                </div>
                                
                                <a href="@Url.Action("Inquiry", "Repair", new { serviceId = service.Id })" 
                                   class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-envelope"></i> Request Quote
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card mt-4">
            <div class="card-body text-center">
                <h4>Don't see what you need?</h4>
                <p class="mb-3">We offer custom repair solutions for all types of bags and luggage.</p>
                <a href="@Url.Action("Inquiry", "Repair")" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-chat-dots"></i> Contact Us for Custom Service
                </a>
            </div>
        </div>
    }
</div>