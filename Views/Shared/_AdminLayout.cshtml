<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false) <!-- Added this newline-->
    <style>
        .admin-sidebar {
            min-height: calc(100vh - 56px);
            background-color: #343a40;
        }
        .admin-sidebar .nav-link {
            color: #adb5bd;
        }
        .admin-sidebar .nav-link:hover, 
        .admin-sidebar .nav-link.active {
            color: #fff;
            background-color: #495057;
        }
    </style>
</head>
<body>
    <!-- Admin Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Admin" asp-action="Dashboard">
                <i class="bi bi-speedometer2"></i> ComBag Admin
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="adminNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-shop"></i> Visit Store
                        </a>
                    </li>
                    <li class="nav-item">
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="nav-link btn btn-link">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
         <!-- Sidebar -->
<div class="col-md-2 col-lg-2 d-md-block admin-sidebar collapse" id="sidebar">
    <div class="position-sticky pt-3">
        <ul class="nav flex-column">
    <li class="nav-item">
        <a class="nav-link @IsActive("Admin", "Dashboard")" asp-controller="Admin" asp-action="Dashboard">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @IsActive("AdminProducts")" asp-controller="AdminProducts" asp-action="Index">
            <i class="bi bi-box-seam"></i> Products
        </a>
    </li>
    <!-- ✅ ADD REPAIR SERVICES ADMIN LINK -->
    <li class="nav-item">
        <a class="nav-link @IsActive("AdminRepair")" asp-controller="AdminRepair" asp-action="Services">
            <i class="bi bi-tools"></i> Repair Services
        </a>
    </li>
    <!-- ✅ ADD BLOG TO ADMIN SIDEBAR -->
    <li class="nav-item">
        <a class="nav-link @IsActive("AdminBlog")" asp-controller="AdminBlog" asp-action="Index">
            <i class="bi bi-newspaper"></i> Blog
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @IsActive("AdminOrders")" asp-controller="AdminOrders" asp-action="Index">
            <i class="bi bi-list-check"></i> Orders
        </a>
    </li>
     <!-- ✅ ADD REPAIR INQUIRIES LINK -->
    <li class="nav-item">
        <a class="nav-link @IsActive("AdminRepair", "Inquiries")" asp-controller="AdminRepair" asp-action="Inquiries">
            <i class="bi bi-inbox"></i> Repair Inquiries
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link @IsActive("Categories")" asp-controller="Categories" asp-action="Index">
            <i class="bi bi-tags"></i> Categories
        </a>
    </li>
</ul>
    </div>
</div>
            <!-- Main Content -->
            <div class="col-md-10 col-lg-10 ms-sm-auto px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <button class="btn btn-sm btn-outline-secondary d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar">
                            <i class="bi bi-list"></i> Menu
                        </button>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

<!-- Before </body> in _AdminLayout.cshtml -->
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
</body>
</html>

@functions {
    private string IsActive(string controller, string action = null)
    {
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        
        if (string.IsNullOrEmpty(action))
            return currentController == controller ? "active" : "";
        
        return (currentController == controller && currentAction == action) ? "active" : "";
    }
}