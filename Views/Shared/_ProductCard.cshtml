@model ComBag.Models.Product

<div class="card h-100">
    <img src="@(Model.ImageUrl ?? "/images/placeholder.jpg")" 
         class="card-img-top" 
         alt="@Model.Name"
         style="height: 200px; object-fit: cover;">
    
    <div class="card-body d-flex flex-column">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text text-muted">@(Model.Description?.Length > 100 ? Model.Description.Substring(0, 100) + "..." : Model.Description)</p>
        
        <div class="mt-auto">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="text-primary">$@Model.Price.ToString("N2")</h4>
                <span class="badge @(Model.StockQuantity > 0 ? "bg-success" : "bg-danger")">
                    @(Model.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                </span>
            </div>
            
            <div class="d-grid gap-2 mt-2">
                <!-- âœ… FIX THIS LINE: Add asp-controller="Products" -->
                <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" 
                   class="btn btn-outline-primary">View Details</a>
                
                @if (Model.StockQuantity > 0)
                {
                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.Id" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>